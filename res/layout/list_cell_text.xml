<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background"
    android:paddingTop="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/text_listitem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/listitem_black"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/text_listitem_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_listitem_name"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="@color/listitem_gray"
        android:maxLines="3"
        android:ellipsize="end"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/text_listitem_remark"
        android:layout_marginTop="10dp"
        android:background="@color/list_divider_color"/>

</RelativeLayout>